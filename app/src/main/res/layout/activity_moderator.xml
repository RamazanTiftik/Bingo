<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModeratorActivity"
    android:background="@drawable/player">

    <TextView
        android:id="@+id/numberView"
        android:layout_width="346dp"
        android:layout_height="274dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/number"
        android:gravity="center"
        android:text="99"
        android:textSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/resetTick"
        android:layout_width="190dp"
        android:layout_height="103dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="70dp"
        android:onClick="resetTick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberView"
        app:srcCompat="@drawable/button4" />

    <ImageView
        android:id="@+id/getTick"
        android:layout_width="190dp"
        android:layout_height="103dp"
        android:layout_marginTop="70dp"
        android:onClick="getTick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resetTick"
        app:layout_constraintTop_toBottomOf="@+id/numberView"
        app:srcCompat="@drawable/button3" />
</androidx.constraintlayout.widget.ConstraintLayout>
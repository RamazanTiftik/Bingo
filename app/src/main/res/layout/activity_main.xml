<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfaceActivity"
    android:background="@drawable/ui">

    <TextView
        android:id="@+id/player"
        android:layout_width="244dp"
        android:onClick="playerTick"
        android:layout_height="65dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Player"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ModeratorPlayer"
        android:onClick="moderatorPlayerTick"
        android:layout_width="244dp"
        android:layout_height="65dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Moderator/Player"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Moderator" />

    <TextView
        android:id="@+id/Moderator"
        android:onClick="moderatorTick"
        android:layout_width="244dp"
        android:layout_height="65dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Moderator"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player" />
</androidx.constraintlayout.widget.ConstraintLayout>